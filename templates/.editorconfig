# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root                     = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line              = lf
insert_final_newline     = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,php}]
charset = utf-8
charset = utf-8
end_of_line = lf
insert_final_newline     = true
trim_trailing_whitespace = true
indent_style             = space
indent_size              = 4

[*.{yml,m4,sh}]
charset                  = utf-8
end_of_line              = lf
indent_size              = 2
indent_style             = space
trim_trailing_whitespace = true
insert_final_newline     = true

[*.md]
charset                  = utf-8
end_of_line              = lf
indent_style             = space
trim_trailing_whitespace = false
insert_final_newline     = true

[*.{css,sass,html}]
indent_style             = space
indent_size              = 2

# Matches the exact files either package.json or .travis.yml
[package.json]
indent_style             = space
indent_size              = 2
